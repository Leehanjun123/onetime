# Railway Production Environment Variables

# Database - Railway PostgreSQL (Replace with your actual values)
DATABASE_URL="postgresql://postgres:password@monorail.proxy.rlwy.net:port/railway"

# Redis - Railway Redis (Replace with your actual values)
REDIS_URL="redis://default:password@monorail.proxy.rlwy.net:port"

# JWT Configuration
JWT_SECRET="railway-production-jwt-secret-key-2025"
JWT_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV=production
PORT=5000

# CORS Configuration - Vercel Frontend URL
FRONTEND_URL="https://onetime-frontend.vercel.app"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Socket.IO Configuration
SOCKET_CORS_ORIGIN="https://onetime-frontend.vercel.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info